= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :serial
    = f.text_field :serial
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :turnout
    = f.number_field :turnout
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
